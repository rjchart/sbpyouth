div.four.fields
    div.field
        label 이름
        input(name="add_name[#{num}]", placeholder="이름", type="text", value="#{name}")
    div.field
        label 직책
        input(name="add_chargeName[#{num}]", placeholder="직책, 혹은 브랜치", type="text", value="#{chargeName}")
    div.field
        label 소속
        td.center.aligned: div.ui.selection.dropdown
            input(type="hidden", name="add_chargeGroup[#{num}]", value="#{chargeGroup}")
            i.dropdown.icon
            div.text #{chargeGroup}
            div.menu
                - var sections = ['교회', '임원', 'BS', '팀장', '부장 집사'];
                each ss in sections
                    div.item(data-value="#{ss}") #{ss}
        //- input(name="add_chargeGroup[#{num}]", placeholder="소속 (회장, 총부, BS 등)", type="text", value="#{chargeGroup}")
    div.field
        label 년도
        input(name="add_chargeYear[#{num}]", placeholder="년도", type="text", value="#{chargeYear}")
