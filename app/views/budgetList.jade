            function DeleteRow(index) {
                var classValue = "tr.tr" + index;
                var deleteValue = "input.delete" + index;

                var r = confirm("해당 열을 삭제하시겠습니까?");
                if (r == true) {
                    $(classValue).hide();
                    $(deleteValue).val(true);
                    //- var $test = $(deleteValue);
                    //- $test.value = "true";
                } 

            }
			
