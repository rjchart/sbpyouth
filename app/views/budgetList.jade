    block script_part01
        script(type="text/javascript", src="/javascript/templates.js")
        script(type="text/javascript", src="/javascript/runtime.js")
        script.
            function AddMemberButton() {
                $('.ui.modal')
                    .modal({
                        closable 	: false,
                        onDeny 		: function () {
                            //- window.alert('Wait not yet!');
                            PlusAddMember();
                            return false;
                        },
                        onApprove 	: function () {
                            var $getAdd = $('#addBank');
                            $('#addBank').ajaxSubmit({
                                error: function (xhr) {
                                    alert('등록 실패했습니다.');
                                },
                                success: function (response) {
                                    alert('등록 성공했습니다.');
                                    document.location.reload();
                                }
                            });
                            //- window.alert('Approved!');
                        }
                    });
                $('.ui.modal')
                    .modal('show');

                    
            }

            function EditButton() {
                var $getAdd = $('#editBank');
                $('#editBank').ajaxSubmit({
                    error: function (xhr) {
                        alert('등록 실패했습니다.');
                    },
                    success: function (response) {
                        alert('등록 성공했습니다.');
                        document.location.reload();
                    }
                });
            }
            
            var addMemberNumber = 1;
            $(document).ready(function(){
                $('.circular.info.icon').popup();
                $('.labeled.icon.button').popup();
                $('.label.info').popup();

                $('.year.dropdown').dropdown({
                    onChange: function(value, text, $selectedItem) {
                        console.log("abc");

                        //- $('.month.dropdown').dropdown('set selected', '7');
                    }
                });

                $('.section.dropdown').dropdown({
                    minCharacters: 5
                });

                //- $('.year.dropdown').dropdown('set selected', '2017');
                $('input.txt').keydown(function(event) {
                    var keyCode = event.keyCode;
                    if (keyCode == 40) {
                        var className = event.target.className;
                        var classes = className.split(' ');
                        //- if (classes[3]!='0')
                        var num = parseInt(classes[2])+1;
                        classes[2] = num.toString();
                        className = 'input.' + classes.join('.');
                        $(className).focus();
                    }
                    else if (keyCode == 38) {
                        var className = event.target.className;
                        var classes = className.split(' ');
                        //- if (classes[3]!='0')
                        var num = parseInt(classes[2])-1;
                        classes[2] = num.toString();
                        className = 'input.' + classes.join('.');
                        $(className).focus();
                    }
                })

                //- $('input.txt.2').focus();
            });

