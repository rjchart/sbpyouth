extends layout
block script
	script.
		function ProfileBS(name, year, branch, attend) {
			var data = {
				name: name,
				year: year,
				branch: branch,
				attend: attend
			}

			$.ajax({
				url: "/branch_profile",
				type: "post",
				data: data,
				dataType: "json",
				success: function(data) {
					document.getElementById("profileData").innerHTML = data.message;
				},
				error: function(request) {
					alert("실패");
				}
			});
		}
		
