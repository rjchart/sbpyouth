	block sub_content
	block modal_content
		div.ui.modal
			i.close.icon 
			div.header Add Member 
			div.ui.content
				form#addMember.ui.fluid.form(action="/addCharge" method="post")
					div.four.fields
						div.field
							label 이름
							input(name="add_name[0]", placeholder="이름", type="text")
						div.field
							label 직책
							input(name="add_chargeName[0]", placeholder="직책", type="text")
						div.field
							label 소속
							input(name="add_chargeGroup[0]", placeholder="소속", type="text")
						div.field
							label 년도
							input(name="add_chargeYear[0]", placeholder="년도", type="text")
			div.actions 
				div.ui.black.deny.button
					i.plus.center.icon
					|등록 맴버 추가
				div.ui.positive.right.labeled.icon.button 등록
					i.checkmark.icon