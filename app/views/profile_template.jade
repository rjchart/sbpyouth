div.ui.card
    div.image.outImg(style="background-color:#e5e5e5")
        if (usingPhoto == 'true')
            img.fitImg(src="#{userPhoto||''}")
        else if (photo)
            img.fitImg(src="#{photo}")
        else
            img.fitImg(src="/public/img/image.png")
    div.content
        a.header #{name}
        div.meta
            span.date #{birthYear}.#{birthMonth}.#{birthDay}
        div.ui.relaxed.celled.list
            div.item
                i.big.heterosexual.middle.aligned.icon
                div.content
                    div.header 성별
                        div.description(style="color:gray")
                            |#{gender}
            div.item
                i.big.tag.middle.aligned.icon
                div.content
                    div.header 브랜치
                        div.description(style="color:gray")
                            |#{branch || ''}
            div.item
                i.big.phone.middle.aligned.icon
                div.content
                    div.header 전화번호
                        if showPhone == "true" || mustShow == true
                            div.description(style="color:gray")
                              |#{phone}
                        else
                            div.description(style="color:gray")
                              |비공개
            div.item
                i.big.mail.middle.aligned.icon
                div.content
                    div.header 메일
                        if showMail == "true" || mustShow == true
                            div.description(style="color:gray")
                              |#{mail || ''}
                        else
                            div.description(style="color:gray")
                              |비공개
            div.item
                i.big.building.middle.aligned.icon
                div.content
                    div.header 거주지
                        if showLocate == "true" || mustShow == true
                            div.description(style="color:gray")
                                |#{locate || ''}
                        else 
                            div.description(style="color:gray")
                                |비공개