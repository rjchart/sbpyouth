div.ui.card
    div.image.outImg(style="background-color:#e5e5e5")
        if (photo)
            img.fitImg(src="#{photo}")
        else
            img.fitImg(src="/public/img/image.png")
    div.content
        a.header #{name}
        div.meta
            span.date #{birthYear}.#{birthMonth}.#{birthDay}
        div.ui.relaxed.celled.list
            div.item
                i.big.heterosexual.middle.aligned.icon
                div.content
                    div.header 성별
                        div.description(style="color:gray")
                        |#{gender}
            div.item
                i.big.phone.middle.aligned.icon
                div.content
                    div.header 전화번호
                        div.description(style="color:gray")
                        |#{phone}
            div.item
                i.big.tag.middle.aligned.icon
                div.content
                    div.header 브랜치
                        div.description(style="color:gray")
                        |#{branch || ''}
            div.item
                i.big.mail.middle.aligned.icon
                div.content
                    div.header 메일
                        div.description(style="color:gray")
                        |#{mail || ''}
            div.item
                i.big.building.middle.aligned.icon
                div.content
                    div.header 거주지
                        div.description(style="color:gray")
                        |#{locate || ''}
            div.item
                i.big.comment.middle.aligned.icon
                div.content
                    div.header 비고
                        div.description(style="color:gray")
                        |#{attendDesc || ''}