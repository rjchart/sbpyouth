extends index
block sub_item03
    a.active.sub.item(href="/executives") 임원
block sub_content
    div.main.ui.container
        div.ui.segment
            h3.ui.dividing.header 임원단
                div.sub.header 신반포 중앙교회 청년부 전반적인 일을 맡고 있으며 매주 토요일 회의를 통해 청년부의 할일을 계획하고 정리합니다.
            div.ui.accordion
                each chargeName, i in order
                    if datas[chargeName]
                        if (i == 0)
                            div.active.title
                                div.ui.blue.tag.label
                                    i.dropdown.icon 
                                    |#{chargeName}
                                strong &nbsp;&nbsp;&nbsp;&nbsp;#{datas[chargeName].name}
                            div.active.content
                                p(style="color:gray") #{chargeDesc[i]}
                                - var data = datas[chargeName]; 
                                include big_profile_template
                        else
                            div.title
                                div.ui.blue.tag.label
                                    i.dropdown.icon 
                                    |#{chargeName}
                                strong &nbsp;&nbsp;&nbsp;&nbsp;#{datas[chargeName].name}
                            div.content
                                p(style="color:gray") #{chargeDesc[i]}
                                - var data = datas[chargeName]; 
                                include big_profile_template
                        