doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content="IE=edge,chrome=1")
    meta(name='viewport', content='width=device-width')
    title= title
    block css
      link(rel='stylesheet' type='text/css' href='/css/style.css')
      link(rel='stylesheet' type='text/css' href='/javascript/dist/semantic.min.css')
    block js
      script(src='/javascript/jquery-1.12.4.min.js')
      script(src="http://malsup.github.com/jquery.form.js") 
      script(src='/javascript/dist/semantic.js')
      script(src='/javascript/main.js')

      if ENV_DEVELOPMENT
        //- script(src='http://localhost:3000/livereload.js')
    
    script.
      $(document).ready(function(){
        $('.right.menu.open').on("click",function(e){
            e.preventDefault();
            $('.ui.vertical.menu').toggle();
        });
            
        $('.ui.dropdown').dropdown();
      });
    block script
    
    block style
      style.
        .secondary.menu {
          margin-top: 5em;
        }
        .fitImg{
          max-width: 100%;
          max-height: 100%;
          position: absolute;
          margin: auto;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          object-fit: contain;
        }
        
        .outImg {
          width:100%;
          height:240px;
        }
        
        .filebox.upload label {
          text-align: center;
          background-color: #fdfdfd;
          width:100%;
        }
        
        /* 파일 필드 숨기기 */
        #uploadInput.filebox[type="file"] {  
          position: absolute;
          width: 1px;
          height: 1px;
          padding: 0;
          margin: -1px;
          overflow: hidden;
          clip:rect(0,0,0,0);
          border: 0;
        }
        
        .ui.grid.main{
          margin-top: 60px;
        }

        .mobile.row{
          padding-top: 10px !important;
          margin-top: 30px !important;
        }

        .mobile.row .ui.inverted.menu{
          border-radius: 0px !important;
        }

        .padding-reset{
          padding: 0px !important;
        }

        .ui.message{
          padding: 40px !important;
        }

        @media (max-width: 767px) {
            .ui.grid.main{
              margin-top: 70px;
            }

            .ui.grid { margin: 0 !important; }

            .ui.vertical.menu.navbar{
              margin-top: 25px !important;
            }

            .ui.main.container {
              margin-top: 10px;
            }

            .ui.secondary.pointing.menu.navbar.page.grid {
              margin: 0 !important;
            }

            .ui.cards {
              margin-top: -30px;
            }
        }

        .ui.vertical.menu{
          margin-top: -15px !important;
          width: 100%;
          display: none;
        }

  body
    block header
        div.ui.grid
            div.computer.tablet.only.row
                div.ui.inverted.fixed.menu.navbar.page.grid
                    header.item
                      img.logo(src="/public/img/logo.png")
                      | <p> <span style="color:olive"> &nbsp;&nbsp; 대한예수교장로회 </span><br/>
                      | &nbsp; 신반포 중앙교회 청년부 </p>
                    block header_item01
                      a.main.item(href="/")
                        i.home.icon
                        |Home  
                    block header_item02
                      a.main.item(href="/branch")
                        i.grid.layout.icon 
                        |Branchs
                    block header_item03
                      a.main.item(href="/friends")
                        i.child.icon 
                        |Friends
                    div.right.menu
                        block header_setting
                          a.ui.main.item(href="/setting")
                            i.settings.icon  
                            |Setting
                        if isLogin
                          a.ui.main.item(href="/auth/logout")
                            i.sign.out.icon  
                            |Logout
                        else
                          a.ui.main.item(href="/auth/login")
                            i.sign.in.icon  
                            |Login
            div.mobile.only.row 
                div.ui.fixed.inverted.navbar.menu 
                    a.brand.item 
                      img.logo(src="/public/img/logo.png")
                      | <p> <span style="color:olive"> &nbsp;&nbsp; 대한예수교장로회 </span><br/>
                      | &nbsp; 신반포 중앙교회 청년부 </p>
                    div.right.menu.open 
                        a.menu.item 
                            i.content.icon
                div.ui.vertical.navbar.menu
                    block header_item01
                      a.main.item(href="/")
                        i.home.icon
                        |Home  
                    block header_item02
                      a.main.item(href="/branch")
                        i.grid.layout.icon 
                        |Branchs
                    block header_item03
                      a.main.item(href="/friends")
                        i.child.icon 
                        |Friends
                    block header_setting
                      a.ui.main.item(href="/setting")
                        i.settings.icon  
                        |Setting
                    if isLogin
                      a.ui.main.item(href="/auth/logout")
                        i.sign.out.icon  
                        |Logout
                    else
                      a.ui.main.item(href="/auth/login")
                        i.sign.in.icon  
                        |Login
    div.ui.page.grid.main
        div.row
            div.column.padding-reset
              block content
