doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title= title
    block css
      link(rel='stylesheet' type='text/css' href='/css/style.css')
      link(rel='stylesheet' type='text/css' href='/javascript/dist/semantic.min.css')
    block js
      script(src='/javascript/jquery.min.js')
      script(src="http://code.jquery.com/jquery-1.7.js")
      script(src="http://malsup.github.com/jquery.form.js") 
      script(src='/javascript/dist/semantic.min.js')
      script(src='/javascript/main.js')
      //- script(src="/javascript/docs.js")

      if ENV_DEVELOPMENT
        //- script(src='http://localhost:3000/livereload.js')
    block script
    
    block style
      style.
        .fitImg{
          max-width: 100%;
          max-height: 100%;
          position: absolute;
          margin: auto;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          object-fit: contain;
        }
        
        .outImg {
          width:100%;
          height:240px;
        }
        
        .filebox.upload label {
          text-align: center;
          background-color: #fdfdfd;
          width:100%;
        }
        
        /* 파일 필드 숨기기 */
        #uploadInput.filebox[type="file"] {  
          position: absolute;
          width: 1px;
          height: 1px;
          padding: 0;
          margin: -1px;
          overflow: hidden;
          clip:rect(0,0,0,0);
          border: 0;
        }

  body
    block header
      div.ui.inverted.menu
          div.ui.container
            header.item
              img.logo(src="/public/img/logo.png")
              | <p> <span style="color:olive"> &nbsp;&nbsp; 대한예수교장로회 </span><br/>
              | &nbsp; 신반포 중앙교회 청년부 </p>
            block header_item01
              a.item(href="/")
                i.home.icon
                |Home  
            block header_item02
              a.item(href="/branch")
                i.grid.layout.icon 
                |Branchs
            block header_item03
              a.item(href="/friends")
                i.child.icon 
                |Friends
    block content
