div.ui.card
    div.image.outImg(style="background-color:#e5e5e5")
        if (data.photo)
            img.fitImg(src="#{data.photo}")
        else
            img.fitImg(src="/public/img/image.png")
        if (data.charge == 'bs')
            div.ui.big.red.ribbon.label
                    //- i.flag.icon 
                    |BS
        //- div.ui.red.left.corner.label
        //-     i.icon BS
    div.content
        a.header #{data.name}
        div.meta
            span.date #{data.birthYear}.#{data.birthMonth}.#{data.birthDay}
        div.ui.relaxed.celled.list
            div.item
                i.big.heterosexual.middle.aligned.icon
                div.content
                    div.header 성별
                        div.description(style="color:gray")
                        |#{data.gender}
            div.item
                i.big.phone.middle.aligned.icon
                div.content
                    div.header 전화번호
                        div.description(style="color:gray")
                        |#{data.phone}
            div.item
                i.big.tag.middle.aligned.icon
                div.content
                    div.header 브랜치
                        div.description(style="color:gray")
                        |#{data.branch || ''}
            div.item
                i.big.mail.middle.aligned.icon
                div.content
                    div.header 메일
                        div.description(style="color:gray")
                        |#{data.mail || ''}
            div.item
                i.big.building.middle.aligned.icon
                div.content
                    div.header 거주지
                        div.description(style="color:gray")
                        |#{data.locate || ''}
            div.item
                i.big.comment.middle.aligned.icon
                div.content
                    div.header 비고
                        div.description(style="color:gray")
                        |#{data.attendDesc || ''}